<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lyHeader"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/hcitas" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyTitle"
            android:background="@drawable/btnredondo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Mi historial de citas"></TextView>
        </LinearLayout>

        <ImageView
            android:id="@+id/fabAddCita"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/icon_mas" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
